{
    "name": "goose-sonarqube-vscode",
    "displayName": "Goose SonarQube",
    "description": "SonarQube integration and Git change analysis for VS Code",
    "version": "0.2.3",
    "publisher": "kuochunchang",
    "icon": "resources/icons/extension-icon.jpg",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Linters",
        "Other"
    ],
    "keywords": [
        "sonarqube",
        "code-quality",
        "git",
        "analysis",
        "code-review"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onCommand:gooseSonarQube.showGitAnalysisMenu",
        "onCommand:gooseSonarQube.analyzeWorkingDirectory",
        "onCommand:gooseSonarQube.analyzeBranch",
        "onCommand:gooseSonarQube.analyzePullRequest"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "gooseSonarQube.analyzeWorkingDirectory",
                "title": "Analyze Working Directory Changes",
                "category": "Goose SonarQube",
                "icon": "$(git-commit)"
            },
            {
                "command": "gooseSonarQube.analyzeBranch",
                "title": "Analyze Branch Comparison",
                "category": "Goose SonarQube",
                "icon": "$(git-compare)"
            },
            {
                "command": "gooseSonarQube.analyzePullRequest",
                "title": "Analyze Pull Request",
                "category": "Goose SonarQube",
                "icon": "$(git-pull-request)"
            },
            {
                "command": "gooseSonarQube.openGitChangePanel",
                "title": "Open Git Change Analysis",
                "category": "Goose SonarQube",
                "icon": "$(git-pull-request)"
            },
            {
                "command": "gooseSonarQube.showGitAnalysisMenu",
                "title": "Git Analysis Menu",
                "category": "Goose SonarQube",
                "icon": {
                    "light": "resources/icons/sonar-light.svg",
                    "dark": "resources/icons/sonar-dark.svg"
                }
            },
            {
                "command": "gooseSonarQube.addConnection",
                "title": "Add SonarQube Connection",
                "category": "Goose SonarQube",
                "icon": "$(add)"
            },
            {
                "command": "gooseSonarQube.bindProject",
                "title": "Bind to SonarQube Project",
                "category": "Goose SonarQube",
                "icon": "$(link)"
            },
            {
                "command": "gooseSonarQube.testConnection",
                "title": "Test SonarQube Connection",
                "category": "Goose SonarQube",
                "icon": "$(check)"
            },
            {
                "command": "gooseSonarQube.diagnose",
                "title": "Diagnose SonarQube Integration",
                "category": "Goose SonarQube",
                "icon": "$(pulse)"
            },
            {
                "command": "gooseSonarQube.analyzeProject",
                "title": "Analyze Project with SonarQube",
                "category": "Goose SonarQube",
                "icon": "$(search)"
            },
            {
                "command": "gooseSonarQube.manageConnections",
                "title": "Manage SonarQube Connections",
                "category": "Goose SonarQube",
                "icon": "$(settings-gear)"
            },
            {
                "command": "gooseSonarQube.manageProjectBinding",
                "title": "Manage Project Binding",
                "category": "Goose SonarQube",
                "icon": "$(project)"
            },
            {
                "command": "gooseSonarQube.exportIssues",
                "title": "Export All SonarQube Issues",
                "category": "Goose SonarQube",
                "icon": "$(export)"
            }
        ],
        "keybindings": [
            {
                "command": "gooseSonarQube.openGitChangePanel",
                "key": "ctrl+shift+g",
                "mac": "cmd+shift+g"
            }
        ],
        "menus": {
            "scm/title": [
                {
                    "command": "gooseSonarQube.showGitAnalysisMenu",
                    "group": "navigation",
                    "when": "scmProvider == git"
                }
            ]
        },
        "configuration": {
            "title": "Goose SonarQube",
            "properties": {
                "gooseSonarQube.connections": {
                    "type": "array",
                    "default": [],
                    "markdownDescription": "Configure SonarQube/SonarCloud connections",
                    "scope": "application",
                    "items": {
                        "type": "object",
                        "required": [
                            "connectionId",
                            "serverUrl"
                        ],
                        "properties": {
                            "connectionId": {
                                "type": "string",
                                "description": "Unique connection identifier"
                            },
                            "serverUrl": {
                                "type": "string",
                                "description": "SonarQube server URL"
                            },
                            "organizationKey": {
                                "type": "string",
                                "description": "Organization key (required for SonarCloud)"
                            },
                            "disableTelemetry": {
                                "type": "boolean",
                                "default": false,
                                "description": "Disable telemetry for this connection"
                            }
                        }
                    }
                },
                "gooseSonarQube.projectBinding": {
                    "type": "object",
                    "default": null,
                    "markdownDescription": "Bind workspace to a SonarQube project",
                    "scope": "resource",
                    "properties": {
                        "connectionId": {
                            "type": "string",
                            "description": "Connection ID from connections"
                        },
                        "projectKey": {
                            "type": "string",
                            "description": "SonarQube project key"
                        },
                        "projectName": {
                            "type": "string",
                            "description": "Project display name"
                        }
                    }
                },
                "gooseSonarQube.timeout": {
                    "type": "number",
                    "default": 3000,
                    "minimum": 1000,
                    "maximum": 30000,
                    "description": "SonarQube connection timeout in milliseconds",
                    "scope": "application"
                },
                "gooseSonarQube.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable SonarQube integration",
                    "scope": "application"
                }
            }
        }
    },
    "scripts": {
        "build": "npm run compile",
        "compile": "node esbuild.mjs",
        "compile:production": "node esbuild.mjs --production",
        "watch": "node esbuild.mjs --watch",
        "build:tsc": "tsc",
        "package": "npm run compile:production && vsce package",
        "test": "vitest run",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\""
    },
    "dependencies": {
        "@octokit/rest": "^22.0.1",
        "simple-git": "^3.19.0",
        "sonarqube-scanner": "^4.3.2"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^8.47.0",
        "@typescript-eslint/parser": "^8.47.0",
        "@vitest/coverage-v8": "^1.6.1",
        "@vscode/vsce": "^2.22.0",
        "esbuild": "^0.24.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "prettier": "^3.6.2",
        "typescript": "^5.3.2",
        "typescript-eslint": "^8.47.0",
        "vitest": "^1.6.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kuochunchang/goose-sonarqube-vscode.git"
    },
    "license": "MIT"
}